<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.dotcompliance.limologs.DvirCheckActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="DRIVER'S VEHICLE INSPECTION REPORT"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/black"
                    android:text="Feb 5, 2016"/>
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin">
                <TableRow>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Driver"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_driver"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Joe Guinn"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="-1.5dp"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Vehicle"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_vehicle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_marginTop="-1.5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Carrier"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_carrier"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="-1.5dp"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Carrier Address"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_carrier_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_marginTop="-1.5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Start Odometer"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_startodo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="-1.5dp"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="End Odometer"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_endodo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_marginTop="-1.5dp">
                    <LinearLayout
                        android:layout_weight="1.0"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="Location"
                            android:textAppearance="?android:attr/textAppearanceButton"/>
                        <TextView
                            android:id="@+id/text_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8" />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_marginTop="-1.5dp">
                    <RelativeLayout
                        android:layout_weight="1.0"
                        android:background="@drawable/tablecell_background"
                        android:padding="@dimen/tablecell_padding"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/text_no_defects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="No defects found"/>
                        <ListView
                            android:id="@+id/list_defects"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:visibility="gone">
                        </ListView>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center"
                android:orientation="vertical">
                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/signature_pad"
                    android:layout_width="420dp"
                    android:layout_height="200dp"
                    android:background="@drawable/tablecell_background" />
                <LinearLayout
                    android:layout_width="420dp"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/tablecell_background"></LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Mechanic's Signature - Clear"
                    android:onClick="clearSignature"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
