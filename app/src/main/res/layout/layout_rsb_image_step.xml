<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/rsb_image_step_title"
        style="@style/Backbone.Survey.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="Step Title"
        />

    <FrameLayout
        android:id="@+id/image_step_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
        <View
            android:id="@+id/rsb_img_step_frameview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible"/>
    </FrameLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/rsb_image_step_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture"/>

</LinearLayout>